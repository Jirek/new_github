
@{
    ViewBag.Title = "Create";
}

<h2>Crear propietario</h2>

<div class="row">
    <div class="col-md-6 col-md-offset-2">

        <form action="@Url.Action("create", "mascota", new { propitarioId = Model })" method="post">
        
            <input type="hidden" name="PropietarioId" value="@Model" />
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" name="Nombre" />
                @Html.ValidationMessage("Nombre")
            </div>

            <div class="form-group">
                <label>FechaNacimiento</label>
                <input type="text" class="form-control" name="FechaNacimiento" />
                @Html.ValidationMessage("FechaNacimiento")
            </div>


            <div class="form-group">
                <label>Sexo</label>
                <input type="text" class="form-control" name="Sexo" />
                @Html.ValidationMessage("Sexo")
            </div>

            <div class="form-group">
                <label>Peso</label>
                <input type="text" class="form-control" name="Peso" />
                @Html.ValidationMessage("Peso")
            </div>

            <div class="form-group">
                <label>Especio</label>
                <input type="text" class="form-control" name="Especio" />
                @Html.ValidationMessage("Especio")
            </div>

            <div class="form-group">
                <label>Raza</label>
                <input type="text" class="form-control" name="Raza" />
                @Html.ValidationMessage("Raza")
            </div>

            <button type="submit" class="btn btn-primary pull-right">Guardar</button>

        </form>
    </div>
</div>

